<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_review_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ico_starpoint_20"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/purple_round_18"
                android:gravity="bottom|center"
                android:layout_marginLeft="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/tv_review_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    tools:text="4.1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:layout_gravity="bottom"
                    android:text="/5점" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_review_rate_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blacktxt"
                android:textSize="16dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="2dp"
                android:text="최고에요! 강추!" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/bg_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="19dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/blacktxt"
                    android:text="서비스 &amp; 친절도"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:gravity="right">
                    <ImageView
                        android:id="@+id/sc_star1"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/sc_star2"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/sc_star3"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/sc_star4"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/sc_star5"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="13dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="교통 &amp; 위치"
                    android:textSize="14dp"
                    android:textColor="@color/blacktxt"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right">
                    <ImageView
                        android:id="@+id/ko_star1"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/ko_star2"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/ko_star3"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/ko_star4"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/ko_star5"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="19dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_checktitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="청결도"
                    android:textSize="14dp"
                    android:textColor="@color/blacktxt"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:gravity="right">
                    <ImageView
                        android:id="@+id/c_star1"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/c_star2"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/c_star3"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/c_star4"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/c_star5"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="13dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시설 &amp; 편의성"
                    android:textSize="14dp"
                    android:textColor="@color/blacktxt"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right">
                    <ImageView
                        android:id="@+id/sp_star1"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/sp_star2"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/sp_star3"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/sp_star4"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/sp_star5"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="fitXY" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="@color/bg_background"/>

        <TextView
            android:id="@+id/tv_review_count"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:textSize="13dp"
            android:paddingLeft="20dp"
            tools:text="총 12개의 리뷰"
            android:gravity="center_vertical"
            android:textColor="@color/detail_more_color"
            android:background="@color/footerview"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>