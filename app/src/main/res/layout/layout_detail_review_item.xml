<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/star1"
            android:layout_gravity="center_vertical"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:paddingRight="1dp"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/review_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/purple"
            android:textSize="11dp"
            android:text=""
            tools:text="4.5"/>
        <TextView
            android:id="@+id/review_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/graytxt"
            android:textSize="11dp"
            android:text=""/>
    </LinearLayout>

    <TextView
        android:id="@+id/review_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/termtext"
        android:textSize="13dp"
        android:text=""/>

    <TextView
        android:id="@+id/review_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="10dp"
        android:textColor="#aaaaaa"
        android:textSize="11dp"
        android:text=""/>

    <LinearLayout
        android:id="@+id/hotel_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/redtext">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="22dp"
                android:background="@drawable/ico_reply"/>

            <TextView
                android:id="@+id/hotel_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="@color/blacktxt"
                android:layout_marginLeft="8dp"
                android:textSize="13dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/review_hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"
            android:textColor="#aaaaaa"
            android:layout_marginTop="10dp"
            android:textSize="11dp"
            android:text=" "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/back_line">
    </LinearLayout>
</LinearLayout>