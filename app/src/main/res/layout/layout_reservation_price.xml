<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="14dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/footerview"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="@string/reservation_user_price_title"
            android:textSize="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/purple" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/real_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blacktxt"
            android:textSize="14dp"
            android:layout_weight="1"
            android:text="@string/reservation_price"/>

        <TextView
            android:id="@+id/tv_real_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blacktxt"
            android:textSize="16dp"
            android:layout_weight="1"
            android:gravity="right"
            tools:text="363,000원"/>
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layerType="software"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/drawable_dash_line2"
        android:layout_marginTop="14dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="17dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blacktxt"
            android:textSize="14dp"
            android:layout_weight="1"
            android:text="@string/reservation_discount_price"/>

        <TextView
            android:id="@+id/tv_discount_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/privateview"
            android:textSize="15dp"
            android:layout_weight="1"
            android:gravity="right"
            tools:text="-34,000원"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/back_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="27dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blacktxt"
            android:textSize="16dp"
            android:layout_weight="1"
            android:text="@string/reservation_sale_price"/>

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blacktxt"
            android:textSize="22dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textStyle="bold"
            tools:text="329,000원"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/sub_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:visibility="gone">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f7fa"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/graytxt"
                android:text="날짜"
                style="@android:style/TextAppearance.Small"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="판매가"
                android:textColor="@color/graytxt"
                style="@android:style/TextAppearance.Small"/>

            <TextView
                android:id="@+id/breakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="조식"
                android:textColor="@color/graytxt"
                style="@android:style/TextAppearance.Small"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/graytxt"
        android:text="@string/reservation_sale_price_info"
        android:gravity="right"
        android:textSize="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:id="@+id/booking_save_point"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/style_edittext_gray_border"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/white"
            android:text="@string/reservation_point"
            android:background="@drawable/point_round"/>

        <TextView
            android:id="@+id/tv_total_discount_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:maxLines="1"
            android:textColor="@color/blacktxt"
            tools:text="16,450원 적립 예정(체크아웃 이후 지급)" />

    </LinearLayout>
</LinearLayout>
