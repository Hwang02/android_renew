<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recent_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/item_del"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ico_delete_gray_txt"/>

    <ImageView
        android:id="@+id/ico_item"
        android:layout_alignParentLeft="true"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ico_search_history"/>

    <TextView
        android:id="@+id/tv_recent_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textSize="15dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/ico_item"
        android:layout_toLeftOf="@+id/item_del"
        android:textColor="@color/termtext"
        tools:text="xxxxxxx"
        android:layout_marginBottom="17dp"/>

    <TextView
        android:id="@+id/tv_recent_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:text="xxxxxxx"/>
</RelativeLayout>