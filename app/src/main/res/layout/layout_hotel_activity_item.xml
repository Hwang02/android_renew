<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recent_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/item_star_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/purple"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        tools:text="4.5" />

    <ImageView
        android:id="@+id/item_star"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/item_star_txt"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/ico_starpoint3" />

    <ImageView
        android:id="@+id/ico_popular"
        android:layout_alignParentLeft="true"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:background="@drawable/ico_search_hotel" />

    <TextView
        android:id="@+id/tv_popular_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textSize="15dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/ico_popular"
        android:layout_toLeftOf="@+id/item_star"
        android:textColor="@color/termtext"
        tools:text="xxxxxxx" />

    <TextView
        android:id="@+id/tv_select_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:text="xxxxxxx" />
</RelativeLayout>