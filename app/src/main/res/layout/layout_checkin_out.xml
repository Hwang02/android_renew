<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/border_shadow">

    <LinearLayout
        android:id="@+id/bt_checkinout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_in_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_checkin_title"
                    android:textSize="13dp"
                    android:layout_gravity="center"
                    android:textColor="@color/star_txt"/>

                <TextView
                    android:id="@+id/tv_checkin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/redtext"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    tools:text="8월31일(금)"/>
            </LinearLayout>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/ico_date_more"
                android:layout_marginLeft="14dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/ll_in_title"/>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/back_line"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="16dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_out_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_checkout_title"
                    android:textSize="13dp"
                    android:layout_gravity="center"
                    android:textColor="@color/star_txt"/>

                <TextView
                    android:id="@+id/tv_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/redtext"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    tools:text="8월31일(금)"/>
            </LinearLayout>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/ico_date_more"
                android:layout_marginLeft="14dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/ll_out_title"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>