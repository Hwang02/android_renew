<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="73dp"
    android:layout_marginBottom="73dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/buttom_view"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_bottom_round">

        <CheckBox
            android:id="@+id/left"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:text="14일동안 열지 않기"
            android:button="@drawable/checkbox_icon"
            android:paddingLeft="12dp"
            android:textColor="@color/termtext"
            android:layout_alignParentLeft="true"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/right"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="닫기"
            android:layout_marginRight="20dp"
            android:textColor="@color/termtext"
            android:textSize="15dp"
            android:background="@color/white" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/buttom_view">

        <RelativeLayout
            android:id="@+id/popup_bg"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/popup_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:riv_corner_radius_top_left="6dp"
                app:riv_corner_radius_top_right="6dp"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
