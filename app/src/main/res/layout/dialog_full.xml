<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="42dp"
                android:layout_marginTop="43dp"
                android:letterSpacing="-0.02"
                android:gravity="center_horizontal"
                android:text="호텔나우 앱에서 사용하는 권한을 안내해드립니다"
                android:textColor="@color/purple"/>

            <LinearLayout
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="30dp"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/ok"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text="@string/alert_confrim"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:background="@color/purple"
                    android:layout_gravity="center"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:fillViewport="true"
                android:layout_below="@id/title"
                android:layout_above="@id/btn_ok"
                android:overScrollMode="never">
                <LinearLayout
                    android:id="@+id/main_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="26dp"
                        android:textSize="16dp"
                        android:text="필수적 접근 권한"
                        android:textColor="@color/blacktxt"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ico_appnoti_phone"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="22dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="기기 및 앱 기록"
                                android:textSize="16dp"
                                android:textColor="@color/blacktxt" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="앱 오류 확인 및 사용성 개선"
                                android:textSize="15dp"
                                android:layout_marginTop="6dp"
                                android:textColor="@color/termtext" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="26dp"
                        android:textSize="16dp"
                        android:text="선택적 접근 권한"
                        android:textColor="@color/blacktxt"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ico_appnoti_location"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="22dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="사용자 위치정보"
                                android:textSize="16dp"
                                android:textColor="@color/blacktxt" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="내주변 바로보기, 숙소 거리순 정렬"
                                android:textSize="15dp"
                                android:layout_marginTop="6dp"
                                android:textColor="@color/termtext" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ico_appnoti_notice"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="22dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="앱 알림"
                                android:textSize="16dp"
                                android:textColor="@color/blacktxt" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="마케팅 정보, 리뷰 요청"
                                android:textSize="15dp"
                                android:layout_marginTop="6dp"
                                android:textColor="@color/termtext" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/termtext"
                        android:text="해당 기능을 이용하실 때 동의를 받으며, 허용하지 않으셔도 서비스 이용이 가능합니다."
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="17dp"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bg_background"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:text="접근권한 변경 방법"
                        android:textSize="14dp"
                        android:textColor="@color/blacktxt" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:text="설정 > 애플리케이션 관리자 > 호텔나우"
                        android:textSize="14dp"
                        android:textColor="@color/termtext" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>