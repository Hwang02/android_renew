<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_round">

        <LinearLayout
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="85dp"
                android:layout_marginRight="85dp"
                android:layout_marginTop="30dp"
                android:letterSpacing="-0.02"
                android:gravity="center_horizontal"
                android:text="특가 정보 푸시 알림을 받으시겠습니까?"
                android:textColor="@color/purple"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:background="@color/footerview">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ico_appnoti_01"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/termtext"
                        android:layout_marginLeft="16dp"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:text="관심 상품 특가"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ico_appnoti_02"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/termtext"
                        android:layout_marginLeft="16dp"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:text="단독특가 및 기획전"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ico_appnoti_03"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/termtext"
                        android:layout_marginLeft="16dp"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:text="할인 쿠폰"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="76dp"
                    android:layout_marginRight="76dp"
                    android:gravity="center"
                    android:textColor="@color/termtext"
                    android:text="푸시 알림은 내정보> 설정하기에서 언제든지 변경 가능합니다"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_below="@id/main_view"
                    android:layout_alignParentBottom="true">

                    <Button
                        android:id="@+id/ok"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:text="동의하기"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:background="@color/purple"
                        android:layout_gravity="center"
                        style="?android:attr/borderlessButtonStyle"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/bg_background"/>

                <LinearLayout
                    android:id="@+id/buttom_view"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/style_button_bar">

                    <CheckBox
                        android:id="@+id/left"
                        android:layout_width="0dp"
                        android:layout_height="26dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:text="14일동안 열지 않기"
                        android:button="@drawable/checkbox_icon"
                        android:paddingLeft="12dp"
                        android:textColor="@color/termtext"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/right"
                        android:layout_width="0dp"
                        android:layout_height="26dp"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:text="다음에요"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/termtext"
                        android:textSize="15dp"
                        android:background="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
