<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/btn_location"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/style_edittext_gray_border">

                    <ImageView
                        android:id="@+id/iv_location"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="8dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/ico_input_pin2"/>

                    <ImageView
                        android:id="@+id/iv_open"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="6dp"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/btn_detail_open"/>

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_open"
                        android:layout_toRightOf="@+id/iv_location"
                        android:textSize="13dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="8dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/purple"
                        android:text="지역선택" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_category"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/style_edittext_gray_border">

                    <ImageView
                        android:id="@+id/iv_category"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="8dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/ico_input_category2"/>

                    <ImageView
                        android:id="@+id/iv_open2"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="6dp"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/btn_detail_open"/>

                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_open2"
                        android:layout_toRightOf="@+id/iv_category"
                        android:textSize="13dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="8dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/purple"
                        android:text="테마선택" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/empty_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/layout_filter"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="260dp"
                    android:layout_height="150dp"
                    android:background="@drawable/img_none_result"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="해당 키워드로 검색 된 상품이 없습니다"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textColor="@color/termtext"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="다른 키워드 및 지역/날짜로 다시 검색해보세요"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/star_txt"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/popular_keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/empty_image"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="35dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/blacktxt"
                    android:text="호텔나우가 추천해드리는 요즘 뜨는 키워드!"/>

                <LinearLayout
                    android:id="@+id/ll_filter1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">

                    <com.hotelnow.utils.FlowLayout
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/filter1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        app:elementSpacing="10dp"
                        app:flowDirection="leftToRight"
                        app:lineSpacing="10dp"
                        app:paddingStart="15dp"
                        app:paddingEnd="15dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>