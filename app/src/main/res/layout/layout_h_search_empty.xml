<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blur_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/btn_location"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:layout_marginTop="7dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/style_edittext_gray_border">

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                android:background="@drawable/ico_input_pin2"/>

            <ImageView
                android:id="@+id/iv_open"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:background="@drawable/btn_detail_open"/>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_open"
                android:layout_toRightOf="@+id/iv_location"
                android:textSize="13dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:textColor="@color/purple"
                android:text="지역선택" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_date"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/style_edittext_gray_border">

            <ImageView
                android:id="@+id/iv_date"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                android:background="@drawable/ico_input_calendar2"/>

            <ImageView
                android:id="@+id/iv_open2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:background="@drawable/btn_detail_open"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_open2"
                android:layout_toRightOf="@+id/iv_date"
                android:textSize="13dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:textColor="@color/purple"
                tools:text="9/21/~9/22" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/termtext"
        android:layout_marginTop="231dp"
        android:gravity="center"
        android:textSize="15dp"
        android:text="해당 지역에 판매중인 상품이 없습니다"/>

    <TextView
        android:id="@+id/sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/unselecttab"
        android:textSize="14dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title"
        android:text="다른 지역이나 날짜로 검색해보세요"/>

</RelativeLayout>